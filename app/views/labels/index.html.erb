
<div class="col-md-5">
  <div class="page-header">
    <h3>Create a New Label</h3>
  </div>
  <%= form_tag(labels_path, role: "form") do %>
    <div class="form-group">
      <%= label_tag "name" %>
      <%= text_field_tag "name", "", class: "form-control", placeholder: "Label Name" %>
    </div>
    <div class="form-group">
      <%= label_tag "description" %>
      <%= text_area_tag "description", "", class: "form-control", placeholder: "Label Description" %>
    </div>
    <button type="submit" class="btn btn-default pull-right">Create</button>
  <% end %>
</div>
<div class="col-md-1"></div>

<div class="col-md-6">

    <div ng-app="LabelApp">
      <div ng-controller="LabelCtrl">
        <div class="page-header">
          <form class="form-inline">
            <span id="labels_title">List of Labels</span>
            <input ng-model="query" type="text" placeholder="Filter by name" autofocus>
          </form>
        </div>
        <ul ng-repeat="label in labels | filter: query | orderBy: 'name' ">
          <div class="row label-row">
            <div class="col-md-4">
              <h3><span class="label label-info">{{label.name}}</span></h3>
            </div>
          </div>
        </ul>
      </div>
    </div>
  </div>
</div>



